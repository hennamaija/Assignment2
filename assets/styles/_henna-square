body {
    background-color: #333;
  }
  
  .sphere {
    width: 150px;
    height: 150px;
    background-color: red;
    border-radius: 50% 50%;
    position: relative;
    margin: 200px auto;
    animation-name: sphere;
    animation-duration: 8s;
    animation-iteration-count: infinite;
    animation-timing-function: linear;
    animation-delay: 1s;
  }
  
  .sphere:hover {
    opacity: 0;
    transition-duration: 2s;
    animation-play-state: paused;
  }
  
  @keyframes sphere {
    0% {background-color: red; border-radius: 50% 50%;}
    10% {background-color: orange;}
    20% {background-color: yellow;}
    30% {background-color: lightgreen;}
    40% {background-color: green}
    50% {background-color: navy; border-radius: 0;}
    60% {background-color: blue;}
    70% {background-color: pink;}
    80% {background-color: orchid;}
    90% {background-color: purple;}
    100% {background-color: maroon; border-radius: 50% 50%; transform: rotate(360deg);}
  }

  @media (prefers-reduced-motion: reduce) {
      .sphere {
          animation: none;
      }
  }

  @media (prefers-reduced-motion: no-preference) {
      .sphere {
          animation: sphere 8s linear infinite;
      }
  }

  @media (prefers-color-scheme: dark) {
      body {
        background-color: #333;
      }
  }

  @media (prefers-color-scheme: light) {
      body {
          background-color: lightgrey;
      }
  }

  @media (orientation: landscape) {
      body {
          background-color: #333;
      }
  }

  @media (orientation: portrait) {
      body {
          background-color: white;
      }
  }
