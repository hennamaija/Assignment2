/*Ingrid's squares*/
.iball-container {
  position: absolute;
  }
  
.iball {
  height: 100px;
  width: 100px;
  position: relative;
  background-color: $ballIngrid;
  border-radius: 50%;
  animation: bounce 10s linear 1s infinite;
}
  
@keyframes bounce {
  10% {height: 100px; width: 100px;}
  30% {height: 100px; width: 90px;}
  50% {height: 60px; width: 120; transform: translateY(80vh); background-color: $ballIngrid-change;}
  100% {transform: translateY(0px); background-color: $ballIngrid}
}

@media (prefers-reduced-motion) {
  .iball {
    animation: none;
    box-shadow: 5px 10px 8px $ballIngrid-shadow;
  }

  @media (orientation: landscape) {
    .iball {
      height: 15vw;
      width: 15vw;
    }
  }
}

@media (prefers-color-scheme: dark) {
  .iball {
    background-color: $ballIngrid-darkMode;
  }

  @keyframes bounce {
    50% {height: 60px; width: 120; transform: translateY(80vh);}
    100% {transform: translateY(0px);}
  }
}

/*Henna's squares*/
hbody {
    background-color: #333;
  }
  
  .sphere {
    width: 150px;
    height: 150px;
    background-color: red;
    border-radius: 50% 50%;
    position: relative;
    margin: 200px auto;
    animation-name: sphere;
    animation-duration: 8s;
    animation-iteration-count: infinite;
    animation-timing-function: linear;
    animation-delay: 1s;
  }
  
  .sphere:hover {
    opacity: 0;
    transition-duration: 2s;
    animation-play-state: paused;
  }
  
  @keyframes sphere {
    0% {background-color: red; border-radius: 50% 50%;}
    10% {background-color: orange;}
    20% {background-color: yellow;}
    30% {background-color: lightgreen;}
    40% {background-color: green}
    50% {background-color: navy; border-radius: 0;}
    60% {background-color: blue;}
    70% {background-color: pink;}
    80% {background-color: orchid;}
    90% {background-color: purple;}
    100% {background-color: maroon; border-radius: 50% 50%; transform: rotate(360deg);}
  }

  @media (prefers-reduced-motion: reduce) {
      .sphere {
          animation: none;
      }
  }

  @media (prefers-reduced-motion: no-preference) {
      .sphere {
          animation: sphere 8s linear infinite;
      }
  }

  @media (prefers-color-scheme: dark) {
      hbody {
        background-color: #333;
      }
  }

  @media (prefers-color-scheme: light) {
      hbody {
          background-color: lightgrey;
      }
  }

  @media (orientation: landscape) {
      hbody {
          background-color: #333;
      }
  }

  @media (orientation: portrait) {
      hbody {
          background-color: white;
      }
  }
  
  /*Thomas' squares*/
